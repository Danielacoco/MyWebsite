<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>

<div id = "projects" class="transitions-enabled">
  <% @projects.each do |proj| %>
    <div class = "box panel panel-default panel transparent">
      <%= link_to image_tag(proj.image.url(:thumb)), proj %>
      <div class = "panel-body">
        <%=proj.name %> <br/>
        <%= proj.description %>
        <% if current_user.try(:admin?) %>
          <div class= "actions" align = "right">
            <%= link_to raw('<span class= "glyphicon glyphicon-pencil"></span>'),
            edit_project_path(proj) %>
            <%=link_to raw('<span class= "glyphicon glyphicon-trash"></span>'), proj, method: :delete, data: {confirm: 'Are you sure?'} %>
          </div>
        <%end%>
      </div>
    </div>
  <%end%>
</div>

<div class = "center">
<%= will_paginate @projects, renderer:
  BootstrapPagination::Rails %>
</div>
